{
    "required_api_version": "^2.0.0",
    "name": "Executable Launcher",
    "description": "Launch your executables",
    "developer_name": "ThrowingShapes",
    "icon": "images/icon.png",
    "preferences": [
        {
            "id": "ts_exec_launcher",
            "type": "keyword",
            "name": "Executable Launcher",
            "default_value": "ex"
        },
        {
            "id": "exec_launcher_directories",
            "type": "input",
            "name": "Executables directories",
            "default_value": "~/Tools,~/OtherTools",
            "description": "Paths to search for executables and AppImages, separated by commas"
        },
        {
            "id": "exec_launcher_enable_lib_filter",
            "type": "bool",
            "name": "Experimental lib filter",
            "default_value": false,
            "description": "Enable experimental filtering of library files"
        }
    ]
}